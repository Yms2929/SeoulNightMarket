<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailDrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/detailCoordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <android.support.v4.view.ViewPager
            android:id="@+id/detailViewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <android.support.design.widget.AppBarLayout
            android:id="@+id/detailAppbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/md_indigo_A400"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/detail_collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:fitsSystemWindows="true"
                app:contentScrim="@color/md_indigo_A400"
                app:expandedTitleMarginEnd="64dp"
                app:expandedTitleMarginStart="48dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:titleEnabled="false">

                <ImageView
                    android:id="@+id/detailImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    app:layout_collapseMode="parallax" />

                <TextView
                    android:id="@+id/store_name"
                    android:layout_marginTop="205dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_white_1000"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="깻잎두마리치킨"/>

                <LinearLayout
                    android:layout_marginTop="230dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="right|center"
                        android:textColor="@color/md_white_1000"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:text="대기자 수"/>

                    <TextView
                        android:id="@+id/currentOrderNumber"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center|left"
                        android:textColor="@color/md_white_1000"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:text="1"/>

                    <Button
                        android:id="@+id/btn_ticket_make"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="2"
                        android:textColor="@color/md_indigo_A400"
                        android:background="@color/md_white_1000"
                        android:onClick="btnOrder"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:text="번호표 받기"/>
                </LinearLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/detailToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_gravity="top"
                    android:layout_marginBottom="48dp"
                    app:layout_collapseMode="pin"
                    app:titleTextColor="@color/md_orange_500"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

                <android.support.design.widget.TabLayout
                    android:id="@+id/detailTabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    app:tabIndicatorColor="@color/md_orange_500"
                    app:tabSelectedTextColor="@color/md_orange_500"
                    app:tabTextColor="@color/md_white_1000" />
            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/detail_nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/md_white_1000"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/navheader"
        app:itemTextColor="@color/md_black_1000"
        app:menu="@menu/menu_navigation" />

</android.support.v4.widget.DrawerLayout>