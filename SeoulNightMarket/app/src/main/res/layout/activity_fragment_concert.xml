<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="seoulnightmarket.seoulnightmarket.fragment.FragmentConcert">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/md_black_1000"
            android:text="공연 안내"
            android:id="@+id/textView" />

        <Button
            android:id="@+id/btnConcert"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:background="@drawable/calendar"
            android:text=""
            android:layout_marginEnd="90dp"
            android:layout_alignTop="@+id/textView"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/concertDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textline"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/md_black_1000"
        android:text="달력에서 날짜를 선택하세요"/>

    <GridView
        android:id="@+id/gridViewConcert"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:horizontalSpacing="5dp"
        android:verticalSpacing="5dp"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:gravity="center">
    </GridView>

</LinearLayout>