<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="seoulnightmarket.seoulnightmarket.fragment.FragmentMarket">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/foodTruck"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="푸드트럭"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/btn_radius"
                android:onClick="foodTruck"/>

            <Button
                android:id="@+id/handMade"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="핸드메이드"
                android:textStyle="bold"
                android:textColor="@color/md_black_1000"
                android:background="@drawable/btn_handmade"
                android:onClick="handMade"/>
        </LinearLayout>

        <seoulnightmarket.seoulnightmarket.etc.ExpandableHeightGridView
            android:id="@+id/gridView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numColumns="2"
            android:horizontalSpacing="5dp"
            android:verticalSpacing="5dp"
            android:stretchMode="columnWidth"
            android:gravity="center">
        </seoulnightmarket.seoulnightmarket.etc.ExpandableHeightGridView>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>